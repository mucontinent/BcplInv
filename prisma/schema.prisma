// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int      @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  password String
  roles    String[]
}

model monitoring_keys {
  id         Int    @id @default(autoincrement())
  name       String
  method     String
  ip_address String
  user       String
  password   String
  dns        String

  @@unique([ip_address, method])
}
